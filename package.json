{
  "name": "vue-mardown-showdowns-editor",
  "version": "1.0.0",
  "author": "Jhuix <jhuix0117@gmail.com>",
  "private": false,
  "description": "A markdown editor using codemirror and previewer using showdown for Vue.js",
  "main": "dist/lib/mdse.umd.js",
  "unpkg": "dist/lib/mdse.umd.min.js",
  "css": "dist/lib/mdse.css",
  "files": [
    "src",
    "dist",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "vue",
    "showdown",
    "showdowns",
    "markdown",
    "preview",
    "html",
    "markdown-editor",
    "showdowns-editor"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jhuix/showdown-markdown-editor"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "npm run build:lib && npm run demo",
    "lint": "vue-cli-service lint",
    "demo": "cross-env BUILD_ENV=demo vue-cli-service build --dest docs/demo",
    "build:lib": "vue-cli-service build --target lib --name VueMDSE --filename mdse --dest dist/lib src/index.js",
    "build:wc": "vue-cli-service build --target wc  --name VueMDSE --filename mdse --dest dist/wc src/index.js"
  },
  "dependencies": {
    "@jhuix/showdowns": "^0.3.6",
    "core-js": "^2.6.5",
    "vue": "^2.6.10",
    "vue-codemirror": "^4.0.6"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "axios": "^0.19.0",
    "babel-eslint": "^10.0.1",
    "cross-env": "^6.0.0",
    "css-loader": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.0.0",
    "prettier": "^1.18.2",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "vue-router": "^3.1.3",
    "vue-template-compiler": "^2.6.10",
    "vuex": "^3.1.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 0.2%",
    "last 2 versions",
    "not ie <= 8",
    "iOS >= 8",
    "Firefox >= 20",
    "Android > 4.4"
  ]
}
