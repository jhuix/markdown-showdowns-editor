{
  "name": "showdown-markdown-editor",
  "version": "0.2.1",
  "author": "Jhuix <jhuix0117@gmail.com>",
  "private": false,
  "description": "A markdown editor using codemirror and previewer using showdown for Vue.js",
  "main": "lib/index.min.js",
  "keywords": [
    "markdown-editor",
    "vue",
    "showdown",
    "markdown",
    "showdown-editor"
  ],
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "lib": "vue-cli-service build --target lib --name showdown-markdown-editor --dest lib src/index.js"
  },
  "dependencies": {
    "codemirror": "^5.48.2",
    "core-js": "^2.6.5",
    "mermaid": "^8.2.5",
    "showdown": "^1.9.0",
    "showdown-katex": "^0.6.0",
    "vue": "^2.6.10",
    "vue-codemirror": "^4.0.6",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.1",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "axios": "^0.19.0",
    "babel-eslint": "^10.0.1",
    "css-loader": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.0.0",
    "prettier": "^1.18.2",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 0.2%",
    "last 2 versions",
    "not ie <= 8",
    "iOS >= 8",
    "Firefox >= 20",
    "Android > 4.4"
  ]
}
